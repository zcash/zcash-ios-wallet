platform :ios, '13.0'
use_frameworks!

target 'wallet' do 
 pod 'ZcashLightClientKit',  :git => 'git@github.com:zcash/ZcashLightClientKit.git', :branch => 'master'
 pod 'KeychainSwift', '~> 19.0.0'
 pod 'MnemonicKit', :git => 'git@github.com:pacu/MnemonicKit.git', :commit => '49ab6726fe8a15e1e615942b0b42a0cd83308090'
 pod 'TinyQRScanner'
 pod 'lottie-ios'
 pod 'Firebase/Crashlytics'
 target 'walletTests' do 
  inherit! :search_paths
 end
 
 target 'walletUITests' do 
   inherit! :search_paths
 end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|


      if target.name == 'ZcashLightClientKit'
         config.build_settings['ZCASH_NETWORK_ENVIRONMENT'] = ENV["ZCASH_NETWORK_ENVIRONMENT"]
      end
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end
